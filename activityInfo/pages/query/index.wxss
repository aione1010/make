/* pages/query/index.wxss */

image {
  width: 15rem;
  height: 15rem;
  margin-top: -5rem;
}
form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 17rem;
}
button{
  line-height: 2rem;
  font-size: 1.2rem;
}
#search{
  background: #17a2b8;
  color:white;
  margin-left:0rem;
  width:4rem;
  display: inline-block;
  vertical-align: middle;
}
.textarea{
  margin-top: .2rem;
  width:14rem;
  border:1px solid gray;
  height: 9rem;
}
view{
  margin-bottom: 1rem;
}
picker {
  width: 9rem;
  display: inline-block;
  border: 1px solid gray;
  border-radius: 3px;
  padding-left: 0.3rem;
  line-height: 2rem;
  vertical-align: middle;
  margin-right: .5rem;
}
text{
  display: block;/*设为inline-block会导致无法垂直居中？*/
  margin-bottom: .5rem;
  width:10rem;
}