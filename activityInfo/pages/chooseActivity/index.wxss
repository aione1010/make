/* pages/chooseActivity/index.wxss */

page {
  overflow-y: hidden;
}

image {
  width: 15rem;
  height: 15rem;
  margin-top: -5rem;
}

form {
  display: flex;
  align-items: center;
  width: 16rem;
  margin: 0 auto;
}

picker {
  width: 10rem;
  display: inline-block;
  border: 1px solid gray;
  border-radius: 3px;
  padding-left: 0.3rem;
  height: 1.5rem;
  vertical-align: middle;
}

text {
  display: inline-block;
  width: 4rem;
  text-align-last: justify;
  margin-right: 0.2rem;
  margin-bottom: 0;
  vertical-align: middle;
}

button {
  width: 5rem;
  line-height: 1.5rem;
  font-size: 1rem;
}
