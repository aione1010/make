/* pages/login/index.wxss */
page{
  overflow-y: hidden;
}
image{
  width:15rem;
  height:15rem;
  margin-top:-5rem;
}
form{
  width:16rem;
  margin:0 auto;
}
form view{
  margin-bottom:1.5rem;
  display:flex;
  justify-content: center;
}
text{
  display: inline;
  margin-right: .5rem;
}
input{
  width:10rem;
  display: inline-block;
  border: 1px solid gray;
  border-radius: 3px;
  padding-left:.3rem;
  line-height: 1.5rem;
  font-size: 1rem;
}
button{
  line-height: 1.5rem;
  font-size:1rem;
}