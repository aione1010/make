/* pages/editInfo/index.wxss */

image {
  width: 15rem;
  height: 15rem;
  margin-top: -5rem;
}

form {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 17rem;
  margin: 0 auto;
}

picker {
  width: 10rem;
  display: inline-block;
  border: 1px solid gray;
  border-radius: 3px;
  padding-left: 0.3rem;
  line-height: 1.5rem;
  vertical-align: middle;
}

.textarea {
  width: 10rem;
  display: inline-block;
  border: 1px solid gray;
  border-radius: 3px;
  padding-left: 0.3rem;
  height: 4rem;
  margin-top: .5rem;
}

#area {
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

button {
  width: 4rem;
  display: inline-block;
  line-height: 1.5rem;
  font-size: 0.9rem;
  vertical-align: middle;
  color:white;
}
